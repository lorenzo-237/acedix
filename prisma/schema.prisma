// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id        Int      @id @default(autoincrement())
  name      String
  // ... Autres champs et relations
  List      List[]
  Version   Version? @relation(fields: [versionId], references: [id])
  versionId Int?

  @@map("boards")
}

model List {
  id       Int    @id @default(autoincrement())
  title    String
  board_id Int
  board    Board  @relation(fields: [board_id], references: [id])
  // ... Autres champs et relations
  Card     Card[]

  @@map("lists")
}

model Card {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  list_id     Int
  list        List   @relation(fields: [list_id], references: [id])
  position    Int // Si vous utilisez une position pour maintenir l'ordre.
  // ... Autres champs et relations

  @@map("cards")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String
  password String // Assurez-vous d'utiliser des mécanismes appropriés pour stocker les mots de passe (hachage, etc.).
  // ... Autres champs et relations

  @@map("users")
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  versions    Version[]
  // ... Autres champs et relations

  @@map("projects")
}

model Version {
  id          Int     @id @default(autoincrement())
  number      String
  description String
  project_id  Int
  project     Project @relation(fields: [project_id], references: [id])
  boards      Board[] // Relation avec les tableaux dans une version spécifique
  // ... Autres champs et relations

  @@map("versions")
}
